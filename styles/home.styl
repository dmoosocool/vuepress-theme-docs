.bg 
  position relative
  width 100%
  height 1200px
  background-image -webkit-linear-gradient(333deg, #6B46E3 0%, #5264EE 50%, #55A0EB 100%)
  background-image -moz-linear-gradient(333deg, #6B46E3 0%, #5264EE 50%, #55A0EB 100%)
  background-image -o-linear-gradient(333deg, #6B46E3 0%, #5264EE 50%, #55A0EB 100%)
  background-image linear-gradient(117deg, #6B46E3 0%, #5264EE 50%, #55A0EB 100%)
  &:after 
    content ''
    display block
    position absolute 
    top 85%
    width 100%
    height 21.875rem
    background-color #f8faff
    transform skewY(-7deg)
  &-top-border
    position absolute 
    width 33.75rem
    height 9.375rem
    top -3.125rem
    right 3.125rem
    transform skew(4deg, -4deg)
    border 1px solid #fff
    border-radius 2.5rem
    opacity .2
  &-top-shadow
    position absolute 
    width 33.75rem
    height 9.375rem 
    top -4.375rem
    right 5.625rem
    transfrom skew(4deg, -4deg)
    background-color #fff
    border-radius 2.5rem
    opacity .08
  &-bottom-border
    position absolute
    width 33.75rem
    height 22.5rem
    bottom 1.875rem
    left -4.375rem
    transform skew(7deg, -7deg)
    border 1px solid #fff
    border-radius 2.5rem
    opacity .2
  &-bottom-shadow
    position absolute
    width 33.75rem
    height 9.375rem
    bottom 0
    left -1.25rem
    transform skew(7deg, -7deg)
    background-color #fff
    border-radius 2.5rem
    opacity .08
.info
  position relative
  margin 0 auto 
  padding-top 16.25rem
  width 90%
  max-width 75rem
  color #fff
  text-align left 
  vertical-align top
  box-sizing border-box
  &-img
    position absolute
    top 15rem
    right 0
    box-sizing border-box
    width 42.875rem
    height 34.125rem
    background-repeat no-repeat
    background-size cover
  &-title 
    text-align left 
    color #fff
    font-weight 300
    font-size 40px
    letter-spacing 0
  &-desc
    margin-top 1.25rem
    text-align left
    font-size 24px
    color #fff
    letter-spacing  0 
  .btn-container 
    margin-top 1.875rem
    text-align left
    .btn 
      display inline-block
      text-align center
      color #fff
      width 8.75rem
      height 2.5rem
      font-size 16px
      line-height 2.5rem
      border-radius 20px
      transition all .3s
      cursor pointer
    .btn-start 
      background-color #00daa8
      &:hover 
        background-color #20e4b7
    .btn-github
      color #fff
      margin-left 1.875rem
      border 1px solid #fff
      background-color transparent
      &:hover
        background-color rgba(255, 255, 255,.2)
.feature
  position relative
  margin-top -25rem
  margin-bottom 13.75rem
  &-title
    margin-bottom 5rem
    width 100%
    color #fff
    font-size 24px
    text-align center
    font-weight 400
    letter-spacing 5px
  &-panel
    display flex
    width 90% 
    margin 0 auto
    max-width 1200px
    justify-content space-between
    box-sizing border-box
    &-item
      display block
      position relative
      width 15.625rem
      box-sizing border-box
      padding 1.875rem
      background-color #fff
      box-shadow 0 4px 30px 0 rgba(0, 0, 0, .05)
      border-radius 12px
      text-align center
      letter-spacing 0
      &__comingsoon
        position absolute
        top 0
        right 15px
      &__img
        margin 1.25rem 0
        img
          width 120px
          height 120px
          object-fit cover
          margin-left 1.25rem
      &__title
        color #333
        font-size 16px
      &__desc
        margin-top .75rem
        font-size 14px
        color #6b798c
