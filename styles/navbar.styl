.navbar-fixed .navbar
  background-color rgba(255, 255, 255, .26)
  box-shadow 0 1px 10px 0 rgba(0, 0, 0, .1)

.navbar
  height 4.8rem
  background-color rgba(255, 255, 255, .0)
  border none

  &-container 
    width 90%
    margin 0 auto

  &-left 
    float left
    .logo 
      position relative
      width 10.8rem
      height 4.8rem
      line-height 4.8rem

      .home-link
        display block
        float left
        height 100%
        width 100%
        overflow hidden
        .logo-img
          position absolute
          top 50%
          margin-top -10px
          width 30px
          height 20px
        .site-name
          position absolute
          height 30px
          width 100%
          left 40px
          color #fff
          font-weight bold
          font-style italic
  &-right
    float right
    height 4.8rem
    line-height 4.8rem
  &-links
    &-item 
      display inline-block
      margin 0 24px
      font-size 14px;
      transition: all 0.3s;
      &:hover 
        opacity .6
      a 
        color #fff
        font-weight 400
